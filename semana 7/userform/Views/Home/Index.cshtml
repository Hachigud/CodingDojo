@{
    ViewData["Title"] = "User Form";
}

@model Usuario
<div class="text-center">

          <form action="/userform" method="post">
            

                
                <h3>Formulario</h3>

                
                <div class="form-group">
                    <label class="col-md-12 control-label" asp-for="Nombre">Tu Nombre</label>
                    <div class="col-md-12">
                        <input  asp-for="Nombre" type="text" placeholder="Tu Nombre"
                            class="form-control input-md">

                    </div>
                     <span class="ErrorMsg" asp-validation-for="Nombre"></span>
                </div>
    

                <div class="form-group">
                    <label class="col-md-12 control-label" asp-for="Apellido">Tu Apellido</label>
                    <div class="col-md-12">
                        <input  asp-for="Apellido" type="text" placeholder="Tu Apellido"
                            class="form-control input-md">

                    </div>
                     <span class="ErrorMsg" asp-validation-for="Apellido"></span>
                </div>

               
                  <div class="form-group">
                    <label class="col-md-12 control-label" asp-for="Edad">Tu Edad</label>
                    <div class="col-md-12">
                        <input type="number" asp-for="Edad" type="text" placeholder="Tu Edad"
                            class="form-control input-md">

                    </div>
                     <span class="ErrorMsg" asp-validation-for="Edad"></span>
                </div>


                 <div class="form-group">
                    <label class="col-md-12 control-label" asp-for="Email">Tu Correo</label>
                    <div class="col-md-12">
                        <input  asp-for="Email" type="email" placeholder="Tu Correo"
                            class="form-control input-md">

                    </div>
                     <span class="ErrorMsg" asp-validation-for="Email"></span>
                </div>

                <div class="form-group">
                    <label class="col-md-12 control-label" asp-for="Password">Tu Clave</label>
                    <div class="col-md-12">
                        <input  asp-for="Password" type="password" placeholder="Tu Clave"
                            class="form-control input-md">

                    </div>
                     <span class="ErrorMsg" asp-validation-for="Password"></span>
                </div>

                <div class="form-group">
                    <button class="btn btn-primary" type="submit" value="submit">Enviar</button>
                </div>
            
        </form>

</div>
